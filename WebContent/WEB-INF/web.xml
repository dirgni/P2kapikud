<?xml version="1.0" encoding="UTF-8"?>
 <!DOCTYPE web-app
     PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
     "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>    
    <servlet>
         <servlet-name>HelloServlet</servlet-name>
         <servlet-class>Uudis</servlet-class>
    </servlet>
    
	<servlet>
		<servlet-name>Avaleht</servlet-name>
		<jsp-file>/WEB-INF/jsp/index.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>UudisLoe</servlet-name>
		<jsp-file>/WEB-INF/jsp/uudis.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>UudisLisa</servlet-name>
		<jsp-file>/WEB-INF/jsp/lisa-uudis.jsp</jsp-file>
	</servlet>
	
	<servlet>
		<servlet-name>UudisTabel</servlet-name>
		<jsp-file>/WEB-INF/jsp/tabel.jsp</jsp-file>
	</servlet>

	
	<!-- mapping -->
	<servlet-mapping>
         <servlet-name>Uudis</servlet-name>
         <url-pattern>/HelloServlet</url-pattern>
    </servlet-mapping>

	<servlet-mapping>
		<servlet-name>Avaleht</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UudisLoe</servlet-name>
		<url-pattern>/Uudiseartikkel/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UudisLisa</servlet-name>
		<url-pattern>/Lisa_Uudis/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>UudisTabel</servlet-name>
		<url-pattern>/Uudised/</url-pattern>
	</servlet-mapping>
	
	<!-- welcome-file-list -->
	<welcome-file-list>
	    <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>